<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Character Name"/></h1>
      <div class="resource">
        <label>Race: </label>
        <input type="text" name="system.race" value="{{system.race}}" placeholder="Human"/>
      </div>
      <div class="resource">
        <label>Stamina: </label>
        <input type="text" name="system.stamina.value" value="{{system.stamina.value}}" data-dtype="Number"/>
        <span> / </span>
        <input type="text" name="system.stamina.max" value="{{system.stamina.max}}" data-dtype="Number"/>
      </div>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="abilities">Abilities</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="bio">Biography</a>
  </nav>

  <section class="sheet-body">
    <div class="tab abilities" data-group="primary" data-tab="abilities">
      <div class="abilities-list">
        {{#each system as |ability key|}}
          {{#if ability.value}}
            <div class="ability">
              <h4 class="ability-name">{{key}}</h4>
              <input type="text" name="system.{{key}}.value" value="{{ability.value}}" data-dtype="Number"/>
              <span class="ability-mod">Mod: {{numberFormat ability.modifier decimals=0 sign=true}}</span>
              <button class="ability-roll" data-ability="{{key}}">Roll</button>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>

    <div class="tab items" data-group="primary" data-tab="items">
      <div class="items-section">
        <h3>Skills</h3>
        <ol class="items-list">
          {{#each skills as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              <h4 class="item-name">{{item.name}}</h4>
              <div class="item-controls">
                <a class="item-control item-roll" title="Roll Item"><i class="fas fa-dice-d20"></i></a>
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
          {{/each}}
        </ol>

        <h3>Weapons</h3>
        <ol class="items-list">
          {{#each weapons as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              <h4 class="item-name">{{item.name}}</h4>
              <span class="item-damage">{{item.system.damage}}</span>
              <div class="item-controls">
                <a class="item-control item-roll" title="Roll Damage"><i class="fas fa-dice-d20"></i></a>
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
          {{/each}}
        </ol>

        <h3>Equipment</h3>
        <ol class="items-list">
          {{#each equipment as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              <h4 class="item-name">{{item.name}}</h4>
              <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
          {{/each}}
        </ol>
      </div>
    </div>

    <div class="tab biography" data-group="primary" data-tab="bio">
      <div class="editor">
        {{editor system.biography target="system.biography" button=true owner=owner editable=editable}}
      </div>
    </div>
  </section>
</form>